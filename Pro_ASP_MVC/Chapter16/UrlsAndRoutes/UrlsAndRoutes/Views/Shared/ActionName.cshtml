
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ActionName</title>
</head>
<body>
    <div>The controller is: @ViewBag.Controller</div>
    <div>The action is: @ViewBag.Action</div>
    <div>@Html.ActionLink("This is an outgoing URL", "Index", "Home", new {id = "MyID"}, new {id = "myAnchorID", @class = "MyCSSClass"})</div>
    <div>This is a URL: @Url.Action("Index", "Home", new { id = "MyID" })</div>
    <div>@Html.ActionLink("This targets another controller", "Index", "Customer")</div>
    <div>This is a Legacy URL: @Html.ActionLink("Clic me", "GetLegacyURL", new { legacyURL = "~/articles/Windows_3.1_Overview.html" })</div>
</body>
</html>
